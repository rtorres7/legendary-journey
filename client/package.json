{
  "name": "max-ui",
  "private": true,
  "scripts": {
    "dev:offline": "vite --mode offline",
    "build:offline": "vite build --mode offline",
    "preview:offline": "vite preview --mode offline",
    "dev:container": "vite --mode container",
    "build:container": "vite build --mode container",
    "preview:container": "vite preview --mode container",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore --fix src",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@amcharts/amcharts5": "^5.2.4",
    "@amcharts/amcharts5-geodata": "^5.0.3",
    "@ckeditor/ckeditor5-basic-styles": "^35.3.2",
    "@ckeditor/ckeditor5-dev-utils": "^31.1.13",
    "@ckeditor/ckeditor5-editor-classic": "^35.3.2",
    "@ckeditor/ckeditor5-essentials": "^35.3.2",
    "@ckeditor/ckeditor5-font": "^35.3.2",
    "@ckeditor/ckeditor5-heading": "^35.3.2",
    "@ckeditor/ckeditor5-html-support": "^35.3.2",
    "@ckeditor/ckeditor5-image": "^35.3.2",
    "@ckeditor/ckeditor5-indent": "^35.3.2",
    "@ckeditor/ckeditor5-link": "^35.3.2",
    "@ckeditor/ckeditor5-list": "^35.3.2",
    "@ckeditor/ckeditor5-paragraph": "^35.3.2",
    "@ckeditor/ckeditor5-style": "^35.3.2",
    "@ckeditor/ckeditor5-theme-lark": "^35.3.2",
    "@ckeditor/ckeditor5-upload": "^35.3.2",
    "@ckeditor/ckeditor5-vue": "^4.0.1",
    "@ckeditor/vite-plugin-ckeditor5": "^0.1.1",
    "@headlessui/vue": "^1.6.7",
    "@heroicons/vue": "2.0.17",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vuepic/vue-datepicker": "^3.5.2",
    "axios": "^0.26.1",
    "cypress": "^12.5.1",
    "dayjs": "^1.11.1",
    "inter-ui": "^3.19.3",
    "lodash": "^4.17.21",
    "postcss-loader": "^4.0.0",
    "raw-loader": "^4.0.2",
    "vee-validate": "^4.5.8",
    "vite": "^4.1.4",
    "vue": "^3.2.13",
    "vue-router": "^4.0.3",
    "vue-tippy": "^6.0.0",
    "vue3-carousel": "^0.2.9",
    "vue3-cookies": "^1.0.6",
    "vue3-simple-typeahead": "^1.0.11",
    "vuex": "^4.0.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@tailwindcss/line-clamp": "^0.3.1",
    "@vue/test-utils": "^2.3.2",
    "autoprefixer": "^10.4.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-vue": "^8.7.1",
    "happy-dom": "^9.20.3",
    "postcss": "^8.4.12",
    "prettier": "2.8.0",
    "sass": "^1.50.0",
    "tailwindcss": "^3.0.23",
    "vitest": "^0.31.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "es2021": true,
      "vue/setup-compiler-macros": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/base",
      "plugin:vue/vue3-essential",
      "plugin:vue/vue3-recommended",
      "plugin:vue/vue3-strongly-recommended",
      "prettier"
    ],
    "ignorePatterns": [
      "*.cy.js"
    ],
    "rules": {
      "vue/max-attributes-per-line": [
        "error",
        {
          "singleline": {
            "max": 4
          },
          "multiline": {
            "max": 4
          }
        }
      ],
      "vue/first-attribute-linebreak": "off",
      "vue/v-on-event-hyphenation": "off",
      "vue/attribute-hyphenation": "off"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
